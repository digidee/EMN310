<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thenewboston.travis"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.SET_WALLPAPER" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.thenewboston.travis.MenuActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.thenewboston.travis.MENU" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.thenewboston.travis.EmailActivity"
            android:label="@string/title_activity_email" >
        </activity>
        <activity
            android:name="com.thenewboston.travis.PhotoActivity"
            android:label="Camera Application"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.thenewboston.travis.SendActivity"
            android:label="@string/title_activity_send" >
        </activity>
        <activity
            android:name="com.thenewboston.travis.GetActivity"
            android:label="@string/title_activity_get" >
        </activity>
        <activity
            android:name="com.thenewboston.travis.GFX"
            android:label="Graphics" >
        </activity>
        <activity
            android:name="com.thenewboston.travis.GFXSurface"
            android:label="Graphics" >
        </activity>
        <activity
            android:name="com.thenewboston.travis.AboutUs"
            android:label="About Us"
            android:theme="@android:style/Theme.Dialog" >
            <intent-filter>
                <action android:name="com.thenewboston.travis.ABOUT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.thenewboston.travis.Prefs"
            android:label="Preferences" >
            <intent-filter>
                <action android:name="com.thenewboston.travis.PREFS" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.thenewboston.travis.SplashActivity"
            android:label="@string/title_activity_splash" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>